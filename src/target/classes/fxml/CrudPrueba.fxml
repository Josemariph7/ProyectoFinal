<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserInterfaceController">
    <MenuBar>
    </MenuBar>
    <TableView fx:id="usersTable" editable="true">
        <columns>
            <TableColumn prefWidth="100" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="userId" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Nombre">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Email">
                <cellValueFactory>
                    <PropertyValueFactory property="email" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="200" text="Contraseña">
                <cellValueFactory>
                    <PropertyValueFactory property="password" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Teléfono">
                <cellValueFactory>
                    <PropertyValueFactory property="phone" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="150" text="Rol">
                <cellValueFactory>
                    <PropertyValueFactory property="role" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <HBox>
        <Button fx:id="addBtn" onAction="#create" text="Agregar" />
        <Button fx:id="updateBtn" onAction="#update" text="Modificar" />
        <Button fx:id="deleteBtn" onAction="#delete" text="Eliminar" />
    </HBox>
</VBox>
